<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	 version="4.0">
    
     <servlet>
        <servlet-name>first</servlet-name>
        <servlet-class>com.servlets.ServletCreation</servlet-class> 
    </servlet>
    
    <!--Servlet Mapping-->
    <servlet-mapping>
        <servlet-name>first</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    
     <servlet>
        <servlet-name>second</servlet-name>
        <servlet-class>com.servlets.ServletCreationSecond</servlet-class> 
    </servlet>
    <servlet-mapping>
        <servlet-name>second</servlet-name>
        <url-pattern>/generic</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
        <servlet-name>third</servlet-name>
        <servlet-class>com.servlets.ServletCreationThird</servlet-class> 
    </servlet>
    <servlet-mapping>
        <servlet-name>third</servlet-name>
        <url-pattern>/http</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
